<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main">

    <!-- Search bar -->
    <RelativeLayout
        android:id="@+id/topSearchBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <EditText
            android:id="@+id/search"
            android:layout_marginLeft="15dp"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button2"
            android:hint="    Search"
            android:textColorHint="#8E3F42"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/searchIconTop"
            android:layout_width="55dp"
            android:layout_height="80dp"
            android:src="@drawable/img_22"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>
    </RelativeLayout>

    <!-- Buttons Row -->
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_below="@id/topSearchBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Shop"
            android:textColor="#8E3F42"
            android:textStyle="bold"
            android:background="@drawable/custom_button2" />

        <TextView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Style"
            android:textColor="#8E3F42"
            android:textStyle="bold"
            android:background="@drawable/custom_button2" />

        <TextView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sports"
            android:textColor="#8E3F42"
            android:textStyle="bold"
            android:background="@drawable/custom_button2" />

        <TextView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Auto"
            android:textColor="#8E3F42"
            android:textStyle="bold"
            android:background="@drawable/custom_button2" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Music"
            android:textColor="#8E3F42"
            android:adjustViewBounds="true"
            android:textStyle="bold"
            android:background="@drawable/custom_button2" />
    </LinearLayout>

    <!-- GRID of Images -->
    <GridLayout
        android:id="@+id/exploreGrid"
        android:layout_below="@id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_26"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_27"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_28"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_29"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_30"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:src="@drawable/img_31"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </GridLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/img_56"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/searchBottom"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/img_57"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/reels"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/img_58"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/img_59"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:src="@drawable/img_94"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />
    </LinearLayout>

</RelativeLayout>
