<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E3F42"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:background="#8E3F42"
                android:layout_margin="10dp"
                android:src="@drawable/img_1" />

            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Socially"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_below="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:text="Create An Account and Sign Up"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="100dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/form"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dp">

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Username" />

            <EditText
                android:id="@+id/user2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/fname"
                android:layout_below="@+id/user2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Your Name"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/fname2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fname"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/lname"
                android:layout_below="@+id/fname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Your Last Name"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/lname2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lname"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/dob"
                android:layout_below="@+id/lname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Date of Birth"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/dob2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dob"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/email"
                android:layout_below="@+id/dob2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Email"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/pass"
                android:layout_below="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Password"
                android:layout_marginTop="2dp"/>

            <EditText
                android:id="@+id/pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="textPassword"/>


            <TextView
                android:id="@+id/signup"
                android:layout_below="@id/pass2"
                android:layout_width="380dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:text="Create An Account"/>

            <ImageView
                android:layout_below="@id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
