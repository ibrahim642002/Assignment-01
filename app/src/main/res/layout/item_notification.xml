<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Profile Picture -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_3"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <!-- Notification Text -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username started following you."
                android:textSize="13sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/notificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3h"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Follow Back Button (visible only for follow notifications) -->
        <Button
            android:id="@+id/followBackButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Follow"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="#3897F0"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:minHeight="0dp"
            android:visibility="gone" />

        <!-- Post Thumbnail (visible for post-related notifications) -->
        <ImageView
            android:id="@+id/postThumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>